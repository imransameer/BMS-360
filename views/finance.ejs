                    <h4 class="mb-4"><span role="img" aria-label="income-expense">üî∑</span> INCOME & EXPENSE TRACKER</h4>
                    <div class="row g-4">
                        <!-- Today's Income -->
                        <div class="col-md-4">
                            <div class="card border-success shadow h-100">
                                <div class="card-body">
                                    <h5 class="card-title"><span role="img" aria-label="income">üìà</span> Today's Income</h5>
                                    <p class="card-text text-muted">Total collection (cash + digital)</p>
                                    <h3 class="text-success">‚Çπ<%= typeof todayIncome !== 'undefined' ? todayIncome.toLocaleString('en-IN', {minimumFractionDigits:2, maximumFractionDigits:2}) : '0.00' %></h3>
