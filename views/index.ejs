<script>
// Checklist add, strike-through, and clear logic
document.addEventListener('DOMContentLoaded', function() {
    const checklist = document.getElementById('checklist');
    const addBtn = document.getElementById('addChecklistBtn');
    const newItemInput = document.getElementById('newChecklistItem');
    const clearBtn = document.getElementById('clearChecklistBtn');

    // Add new checklist item
    addBtn.addEventListener('click', function() {
        const text = newItemInput.value.trim();
        if (text) {
            const id = 'check' + (checklist.children.length + 1);
            const li = document.createElement('li');
            li.className = 'list-group-item checklist-item';
            li.innerHTML = `
                <input class="form-check-input me-2" type="checkbox" id="${id}">
                <label class="form-check-label" for="${id}">${text}</label>
            `;
            checklist.appendChild(li);
            newItemInput.value = '';
        }
    });

    // Strike-through on check
    checklist.addEventListener('change', function(e) {
        if (e.target.classList.contains('form-check-input')) {
            const label = e.target.nextElementSibling;
            if (e.target.checked) {
                label.style.textDecoration = 'line-through';
                label.style.color = '#888';
            } else {
                label.style.textDecoration = '';
                label.style.color = '';
            }
        }
    });
    
    // Clear all checklist items
    clearBtn.addEventListener('click', function() {
        checklist.innerHTML = '';
    });
});
</script>

