    <script>
        // Show loading message immediately
        const loadingContainer = document.createElement('div');
        loadingContainer.className = 'notification-container';
        loadingContainer.style.position = 'fixed';
        loadingContainer.style.top = '20px';
        loadingContainer.style.right = '20px';
        loadingContainer.style.zIndex = '9999';
        document.body.appendChild(loadingContainer);
        
        // Create loading notification
        const loadingNotification = document.createElement('div');
        loadingNotification.className = 'alert alert-info attendance-notification shadow-sm';
        loadingNotification.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Page initialized';
        loadingContainer.appendChild(loadingNotification);
        
        // Create notification container once DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Remove loading message
            if (loadingNotification.parentNode === loadingContainer) {
                loadingContainer.removeChild(loadingNotification);
            }
            
            // Initialize event listeners with event delegation
            initAttendanceFunctionality();
            
            // Show a success message that the page is loaded
            showNotification('Attendance page loaded successfully!', 'success');
        });
        
        // Function to initialize attendance functionality with optimized event handling
        function initAttendanceFunctionality() {
            const attendanceTable = document.getElementById('attendanceTable');
            const searchDateBtn = document.getElementById('searchDateBtn');
            const attendanceDate = document.getElementById('attendanceDate');
            
            // Event delegation for status selects - handles all status changes with a single listener
            if (attendanceTable) {
                attendanceTable.addEventListener('change', function(e) {
                    // Handle status select changes
                    if (e.target.classList.contains('status-select')) {
                        updateDependentFields(e.target);
                    }
                });
                
                // Event delegation for save buttons
                attendanceTable.addEventListener('click', function(e) {
                    if (e.target.closest('.save-btn')) {
                        const saveBtn = e.target.closest('.save-btn');
                        saveAttendanceRecord(saveBtn);
                    }
                });
            }
            
            // Date search functionality
            if (searchDateBtn && attendanceDate) {
                searchDateBtn.addEventListener('click', function() {
                    searchByDate();
                });
                
                // Also allow pressing Enter in the date field
                attendanceDate.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        searchByDate();
                    }
                });
            }
            
            // Helper function for date search
            function searchByDate() {
                const selectedDate = attendanceDate.value;
                if (selectedDate) {
                    showNotification('Loading attendance data...', 'info');
                    window.location.href = `/attendance?date=${selectedDate}`;
                }
            }
        }
        
        // Function to update dependent fields based on status - optimized
        function updateDependentFields(statusSelect) {
            const row = statusSelect.closest('tr');
            const leaveTypeSelect = row.querySelector('.leave-type-select');
            const reasonInput = row.querySelector('.reason-input');
            
            // Immediate state update for better UX
            const isPresent = statusSelect.value === 'present';
            leaveTypeSelect.disabled = isPresent;
            reasonInput.disabled = isPresent;
            
            // Clear fields if present
            if (isPresent) {
                leaveTypeSelect.value = '';
                reasonInput.value = '';
            }
            
            // Update row background for visual feedback
            row.className = 'bg-attendance-' + statusSelect.value;
        }
        
        // Function to save attendance record - optimized
        async function saveAttendanceRecord(saveBtn) {
            const row = saveBtn.closest('tr');
            const employeeId = row.getAttribute('data-employee-id');
            const status = row.querySelector('.status-select').value;
            const leaveTypeSelect = row.querySelector('.leave-type-select');
            const reasonInput = row.querySelector('.reason-input');
            const leaveType = leaveTypeSelect.value;
            const reason = reasonInput.value;
            const date = document.getElementById('attendanceDate').value;
            
            // Validate data
            if (status !== 'present' && !leaveType) {
                showNotification('Please select a leave type for absences, leaves, or half days.', 'error');
                leaveTypeSelect.focus();
                return;
            }
            
            // Prepare data for sending
            const attendanceData = {
                employee_id: employeeId,
                date: date,
                status: status,
                leave_type: status !== 'present' ? leaveType : null,
                reason: status !== 'present' ? reason : null
            };
            
            try {
                // Show loading state
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                saveBtn.disabled = true;
                
                // Send data to server with optimized fetch
                const response = await fetch('/att_emp/save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(attendanceData),
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success message
                    saveBtn.innerHTML = '<i class="fas fa-check"></i>';
                    setTimeout(() => {
                        saveBtn.innerHTML = '<i class="fas fa-save"></i>';
                        saveBtn.disabled = false;
                    }, 1000); // Reduced timeout for better UX
                    
                    showNotification('Attendance saved!', 'success');
                } else {
                    throw new Error(result.message || 'Could not save attendance');
                }
            } catch (error) {
                console.error('Error saving attendance:', error);
                saveBtn.innerHTML = '<i class="fas fa-times"></i>';
                setTimeout(() => {
                    saveBtn.innerHTML = '<i class="fas fa-save"></i>';
                    saveBtn.disabled = false;
                }, 1000);
                
                showNotification('Error: ' + error.message, 'error');
            }
        }
        
        // Function to show notification - optimized
        function showNotification(message, type = 'info') {
            const container = document.querySelector('.notification-container');
            if (!container) return;
            
            // Create notification element
            const notification = document.createElement('div');
            notification.className = `alert alert-${type === 'error' ? 'danger' : (type === 'success' ? 'success' : 'info')} attendance-notification shadow-sm`;
            notification.innerHTML = message;
            
            // Add close button
            const closeBtn = document.createElement('button');
            closeBtn.type = 'button';
            closeBtn.className = 'btn-close float-end';
            closeBtn.setAttribute('aria-label', 'Close');
            closeBtn.onclick = function() {
                container.removeChild(notification);
            };
            notification.appendChild(closeBtn);
            
            // Add to container
            container.appendChild(notification);
            
            // Auto remove after 3 seconds (reduced from 5)
            setTimeout(() => {
                if (notification.parentNode === container) {
                    container.removeChild(notification);
                }
            }, 3000);
        }
        
        // Optimize page load by initializing theme toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.body.classList.toggle('sidebar-toggled');
            document.querySelector('.sidebar').classList.toggle('toggled');
        });
    </script>
