                        <table class="table table-hover mb-0 align-middle" id="attendanceTable">
                            <thead class="bg-light">
                                <tr>
                                    <th class="py-3 px-4">ID</th>
                                    <th class="py-3">Name</th>
                                    <th class="py-3">Department</th>
                                    <th class="py-3">Status</th>
